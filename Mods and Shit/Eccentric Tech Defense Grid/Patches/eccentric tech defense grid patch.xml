<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- COMBAT INFRASTRUCTURE -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="Eccentric_DefenseGridBuildingBase"]</xpath>
		<value>
			<designationCategory>Ferny_CombatInfrastructure</designationCategory>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Eccentric_DefenseConduit"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_CombatInfrastructure</designationCategory>
		</value>
	</Operation>

<!-- WEAPONS -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Eccentric_ArtilleryVerticalMissileLauncher"]</xpath>
