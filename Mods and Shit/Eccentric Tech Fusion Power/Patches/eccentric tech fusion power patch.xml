<?xml version="1.0" encoding="utf-8"?>
<Patch>
	
	<!-- POWER INFRASTRUCTURE -->

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Eccentric_FuelPipe"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_PowerManagement</designationCategory>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Eccentric_TritiumBreeder"]/designationCategory</xpath>
		<value>
			<designationCategory>Ferny_PowerManagement</designationCategory>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[defName="Eccentric_DeuteriumExtractor"]</xpath>
		<value>
			<designationCategory>Ferny_PowerManagement</designationCategory>
		</value>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Odyssey</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<success>Always</success>
					<xpath>Defs/ThingDef[defName="Eccentric_HeliumExtractor"]/designationCategory</xpath>
					<value>
						<designationCategory>Ferny_PowerManagement</designationCategory>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

<!-- POWER STORAGE -->

	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="Eccentric_FuelTankBase"]</xpath>
		<value>
			<designationCategory>Ferny_PowerStorage</designationCategory>
		</value>
	</Operation>

<!-- POWER GENERATION -->
	
	<Operation Class="PatchOperationAdd">
		<success>Always</success>
		<xpath>Defs/ThingDef[@ParentName="Eccentric_BaseFusionGenerator"]</xpath>
		<value>
			<designationCategory>Ferny_PowerGeneration</designationCategory>
		</value>
	</Operation>
	
</Patch>
